<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetSensor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/surfaceColor"
    android:padding="16dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <!-- Drag Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="@color/primaryColor"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/primaryColor"
        android:radius="2dp"/>

    <!-- Sensor Name -->
    <TextView
        android:id="@+id/tvSensorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensor Node 1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:layout_marginBottom="8dp"/>

    <!-- Sensor Coordinates -->
    <TextView
        android:id="@+id/tvSensorLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lat: 0.0, Lon: 0.0"
        android:textColor="@color/textSecondary"
        android:layout_marginBottom="16dp"/>

    <!-- Sensor Readings -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAccel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accel X: 0.0, Y: 0.0, Z: 0.0"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvTilt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tilt: 0Â°"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvRain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rain: 0 mm"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvSoilMoisture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soil Moisture: 0%"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>

    <!-- Threat Level -->
    <TextView
        android:id="@+id/tvThreatLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Threat Level: Low"
        android:textColor="@color/primaryColor"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:gravity="center"/>

</LinearLayout>
